<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>LabMate - Profile Popup</title>
    <link rel="stylesheet" href="/css/profile_pages.css">
    <link rel="stylesheet" href="/css/theme-style.css">
    <link rel="stylesheet" href="/css/navbar-style.css">

    <!-- Imported Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=DM+Sans:wght@700&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;600;700;900&display=swap" rel="stylesheet">

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <style>
        .popup-profile {
            position: fixed;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            background-color: white;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.2);
            z-index: 1000;
            max-width: 500px;
            width: 90%;
        }
        
        .popup-overlay {
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background-color: rgba(0, 0, 0, 0.5);
            z-index: 999;
        }
        
        .close-popup {
            position: absolute;
            top: 10px;
            right: 10px;
            cursor: pointer;
            font-size: 20px;
            color: #666;
        }
        
        .close-popup:hover {
            color: #000;
        }
        
        .profile-header {
            display: flex;
            align-items: center;
            margin-bottom: 20px;
        }
        
        .profile-image {
            width: 80px;
            height: 80px;
            border-radius: 50%;
            object-fit: cover;
            margin-right: 15px;
        }
        
        .profile-name {
            font-size: 24px;
            font-weight: 700;
            margin: 0;
        }
        
        .profile-type {
            font-size: 14px;
            color: #666;
            margin: 5px 0 0 0;
        }
        
        .profile-info {
            margin-bottom: 20px;
        }
        
        .info-label {
            font-weight: 600;
            margin-bottom: 5px;
            display: block;
        }
        
        .info-value {
            margin-bottom: 15px;
        }
        
        .profile-bio {
            margin-top: 20px;
            padding-top: 20px;
            border-top: 1px solid #eee;
        }
    </style>
</head>
<body>
    <div id="profilePopupOverlay" class="popup-overlay"></div>
    <div id="profilePopup" class="popup-profile">
        <span class="close-popup" onclick="closePopup()">&times;</span>
        <div class="profile-header">
            <img id="profileImage" class="profile-image" src="{{userData.image}}" alt="Profile Image">
            <div>
                <h2 id="profileName" class="profile-name">{{userData.firstName}} {{userData.lastName}}</h2>
                <p id="profileType" class="profile-type">{{userData.type}}</p>
            </div>
        </div>
        <div class="profile-info">
            <span class="info-label">Email</span>
            <div id="profileEmail" class="info-value">{{userData.email}}</div>
            
            <span class="info-label">Department</span>
            <div id="profileDepartment" class="info-value">{{userData.department}}</div>
        </div>
        <div class="profile-bio">
            <span class="info-label">Biography</span>
            <div id="profileBio" class="info-value">{{userData.biography}}</div>
        </div>
    </div>

    <script>
        function closePopup() {
            // Check if we came from student-laboratories and redirect back
            if (document.referrer.includes('student-laboratories')) {
                window.location.href = '/student-laboratories';
            } else {
                window.history.back();
            }
        }
        
        // Add event listeners for closing the popup
        document.addEventListener('DOMContentLoaded', function() {
            // Close popup when clicking on overlay
            document.getElementById('profilePopupOverlay').addEventListener('click', closePopup);
        });
    </script>
</body>
</html>
